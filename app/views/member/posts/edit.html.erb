<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-lg-4 col-md-4 col-sm-8'>
      <h1 class='text-center mb-4 border-bottom'>Edit Post</h1>

      <%= render 'error', object: @post %>

      <%= form_with model: [@group, @post], method: :patch do |f| %>
        <div class='form_group mb-3'>
          <%= f.label :content, 'Post Content', class: 'form-label' %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>

        <div class='form_group mb-3'>
          <%= f.label :post_image, 'Post Image', class: 'form-label' %>
          <%= f.file_field :post_image, accept: 'image/jpeg, image/png, image/webp', class: 'form-control-file' %>
        </div>

        <div class='d-flex justify-content-center mt-4'>
          <%= f.submit 'Update Post', class: 'btn btn-outline-info w-50' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
