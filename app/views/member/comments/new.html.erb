<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-lg-4 col-md-4 col-sm-8'>

      <h1 class='text-center mb-4 border-bottom'>New Comment</h1>

      <%= form_with model: @comment, url: post_comments_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :content, 'Comment', class: 'form-label' %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <div class='d-flex justify-content-center mt-4'>
          <%= f.submit 'Post a Comment', class: 'btn btn-outline-dark' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
