<% @comment.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>

<div class="container">
  <h2 class="text-center mb-4">コメントする</h2>

  <%= form_with model: @comment, url: post_comments_path, method: :post do |f| %>
    <div class="form_group">
      <label>コメント</label>
      <%= f.text_field :content, class: 'form-control' %>
    </div>
      <%= f.submit 'コメント投稿', class: 'btn btn-success' %>
  <% end %>
</div>
