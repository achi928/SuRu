<div class = 'container'>
  <div class = 'row justify-content-center'>
    <div class = 'col-md-6 col-12 text-center'>
      <%= image_tag @group.get_group_image %>
      <h2 class = 'text-center mb-4'><%= @group.name %></h2>
      <h1 class = 'text-center mb-4'>グループオーナー<%= @group.owner.nickname %></h1>
      <p>
        各ポストにいいね、コメント<br>
        自分のポストだけコメント見れる<br>
      </p>
      <%= link_to '退会する', group_withdraw_membership_path(@group.id, @membership.id), method: :patch, data: { confirm: "本当に退会しますか？" }, class: 'btn btn-secondary' %>
      <% if @group.owner.id == current_member.id %>
        <%= link_to '編集する', edit_group_path(@group.id), class: 'btn btn-secondary' %>
      <% end %>
      <%= form_with model: [@group, @group_post] do |f| %>
        <div class="form_group">
          <label>新規投稿</label>
          <%= f.text_field :content, class: 'form-control' %>
          <%= f.file_field :post_image, accept: 'image/jpeg, image/png, image/webp', class: 'form-control-file' %>
          <%= f.submit '投稿する', class: 'btn btn-success' %>
         </div>
      <% end %>
      <% @group_posts.each do |group_post| %>
        <% if group_post.get_post_image %>
          <%= image_tag group_post.get_post_image %>
        <% end %>
        <% if group_post.member_id == current_member.id %>
          <%= link_to "#{group_post.member.nickname}: #{group_post.content}", edit_group_group_post_path(@group.id, group_post.id), style: "color: black; text-decoration: none;" %><br>
        <% else %>
          <%= "#{group_post.member.nickname}: #{group_post.content}" %><br>
        <% end %>
      <% end %>
      
    </div>
  </div>
</div>
