<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-lg-4 col-md-6 col-sm-8'>

      <div class='d-flex justify-content-center mb-3'>
        <%= image_tag @member.get_profile_image(150, 150) %>
      </div>

      <h3 class='text-center font-weight-bold mb-2'><%= @member.nickname %></h3>

      <div class='d-flex justify-content-around mt-3'>
        <div class='px-3 py-2 border rounded bg-light text-center w-50 mx-1'>
          <span class='text-muted small'>Gender</span><br>
          <strong><%= @member.gender_i18n %></strong>
        </div>
        <div class='px-3 py-2 border rounded bg-light text-center w-50 mx-1'>
          <span class='text-muted small'>Age Group</span><br>
          <strong><%= @member.age_group %></strong>
        </div>
      </div>

    </div>
  </div>
</div>
