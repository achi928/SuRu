<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-lg-4 col-md-4 col-sm-8'>
      <h1 class='text-center mb-4 border-bottom'>Contact Form</h1>

      <%= form_with model: @contact do |f| %>

        <div class='form_group mb-3'>
          <%= f.label :name, 'Full Name', class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: '氏名' %>
        </div>

        <div class='form_group mb-3'>
          <%= f.label :name, 'E-Mail', class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
        </div>

        <div class='form_group mb-3'>
          <%= f.label :subject, 'Subject', class: 'form-label' %>
          <%= f.collection_select(:subject, Category.all, :id, :name, { prompt: '選択してください' }, { class: 'form-control' }) %>
        </div>

        <div class='form_group mb-3'>
          <%= f.label :message, 'Message', class: 'form-label' %>
          <%= f.text_field :message, class: 'form-control', placeholder: '内容' %>
        </div>

        <%= f.submit 'Review', class: 'btn btn-outline-info w-100 mt-3' %>


    </div>
  </div>
</div>