<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-lg-6 col-md-6 col-sm-8'>
      <h1 class='text-center mb-4 border-bottom'>Contact Form</h1>

      <%= form_with model: @contact, url: confirm_path, method: :get do |f| %>

        <div class='form_group mb-3'>
          <%= f.label :name, 'Full Name', class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: '氏名' %>
        </div>

        <div class='form_group mb-3'>
          <%= f.label :name, 'E-Mail', class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
        </div>

        <div class='form_group mb-3'>
          <%= f.label :subject, 'Subject', class: 'form-label' %><br>
          <% subject_value = [] %>
          <% Contact.subjects_i18n.each { |key, value| subject_value << [value, key] } %>
          <%= f.select :subject, subject_value, class: 'form-control' %>
        </div>

        <div class='form_group mb-3'>
          <%= f.label :message, 'Message', class: 'form-label' %>
          <%= f.text_area :message, class: 'form-control', placeholder: '内容' %>
        </div>

        <%= f.submit 'Review', class: 'btn btn-outline-info w-100 mt-3' %>
      <% end %>

    </div>
  </div>
</div>