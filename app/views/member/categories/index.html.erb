<div class = 'container mt-5'>
  <%= form_with url: groups_search_path, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.submit '検索', class: 'btn btn-success' %>
  <% end %>
  <h3 class = 'fw-bold border-bottom pb-3 mb-5 text-center'>カテゴリー一覧・追加</h3>

  <div class = 'row justify-content-center'>
    <% @categories.each do |category| %>
      <div class = 'col-6 col-md-4 mb-4 col-lg-3 text-center'>
        <%= link_to category_groups_path(category.id), class: 'd-block' do %>
          <%= image_tag category.get_category_image, class: 'category-image mb-2', style: 'object-fit: cover;' %>
          <%= category.name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

</div>