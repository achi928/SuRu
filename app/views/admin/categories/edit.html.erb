<div class='container mt-4'>
  <h2 class=' border-bottom pb-2 mb-4 text-center'>カテゴリー編集</h2>

  <div class='row justify-content-center'>
    <div class='col-md-6'>
    
      <% if @category.errors.any? %>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: [:admin, @category] do |f| %>
        <div class='form-group'>
          <label class='font-weight-bold'>カテゴリー画像</label>
          <%= f.file_field :category_image, accept: 'image/jpeg, image/png, image/webp', class: 'form-control-file' %>
        </div>

        <div class='form-group'>
          <label class='font-weight-bold'>カテゴリー名</label>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class='d-flex justify-content-center mt-3'>
          <%= f.submit '変更を保存', class: 'btn btn-success px-4 py-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

