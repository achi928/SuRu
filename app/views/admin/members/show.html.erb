<div class='container mt-4'>
  <h2 class='text-center border-bottom pb-2 mb-4'>
    <%= @member.nickname %> の会員詳細
  </h2>

  <div class='row justify-content-center'>
    <div class='col-12 col-md-8'>
      <table class='table bg-white shadow-sm'>
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @member.id %></td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= @member.nickname %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= @member.is_active ? '有効' : '退会済' %>
            </td>
            <td>
              <% if @member.is_active %>
                <%= link_to '退会', admin_withdraw_path(@member.id), method: :patch, class: 'btn btn-danger btn-sm' %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>
              <%= link_to '投稿一覧へ', admin_member_posts_path(@member.id), class: 'text-dark' %>
            </th>
            <th>
              <%= link_to 'コメント一覧へ', admin_member_comments_path(@member.id), class: 'text-dark' %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
