<div class="container mt-4">
  <h3 class="fw-bold border-bottom pb-2 mb-4 text-center">会員一覧</h3>

  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="thead-light">
            <tr>
              <th class="text-center" style="width: 100px;">会員ID</th>
              <th class="text-center">ニックネーム</th>
              <th class="text-center" style="width: 120px;">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% members.each do |member| %>
              <tr>
                <td class="text-center"><%= member.id %></td>
                <td class="align-middle text-center">
                  <%= link_to member.nickname, admin_member_path(member.id), class: "fw-bold text-dark" %>
                </td>
                <td class="text-center">
                  <span class="<%= member.is_active ? 'text-success fw-bold' : 'text-secondary fw-bold' %>">
                    <%= member.is_active ? '有効' : '退会' %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-center">
          <%= paginate members %>
        </div>
      </div>
    </div>
  </div>
</div>
